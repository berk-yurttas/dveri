# FastAPI Configuration
PROJECT_NAME="Dashboard API"
VERSION="1.0.0"
API_V1_STR="/api/v1"

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:8080"

# PostgreSQL Database (for metadata)
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=dashboard_metadata
POSTGRES_PORT=5432

# ClickHouse Database (for dashboard data)
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DB=dashboard_data

# Security
SECRET_KEY=your-secret-key-change-this-in-production-please-make-it-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Auth Server Configuration
AUTH_SERVER_URL=http://localhost:8000
AUTH_SERVER_PROXY_HOST=
AUTH_SERVER_PROXY_PORT=0

# Cookie Configuration
COOKIE_DOMAIN=localhost
CORS_ORIGIN=http://localhost:3000